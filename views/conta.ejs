<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Calculadora</title>
    <script>
        function setOperation(op) {
            document.getElementById("opForm").action = '/' + op;
        }
    </script>
</head>
<body>
    <h1>Digite dois números:</h1>
    <form method="post" id="opForm">
        <label> Número 1: </label>
        <input id="n1" name="n1" required/>
        <label> Número 2: </label>
        <input id="n2" name="n2" required/>

        <button type="submit" onclick="setOperation('soma')">Somar</button>
        <button type="submit" onclick="setOperation('subtracao')">Subtrair</button>
        <button type="submit" onclick="setOperation('multiplicacao')">Multiplicar</button>
        <button type="submit" onclick="setOperation('divisao')">Dividir</button>
        <button type="submit" onclick="setOperation('fatorial')">Fatorial do Número 1</button>
    </form>

    <% if (typeof(conta) == 'undefined') { %>
    <h2>Aguardando valores...</h2>
    <% } else { %>
    <h1>Resultado:</h1>
    <h1 id="resultado">
        <%= conta %>
    </h1>
    <% } %>
</body>
</html>
